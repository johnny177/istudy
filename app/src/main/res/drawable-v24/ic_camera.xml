<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="50dp"
                android:height="50dp"/>
            <stroke
                android:width="5dp"
                android:color="#FFADAD"/>
            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="150dp"
                android:height="150dp"/>
            <stroke
                android:width="16dp"
                android:color="@android:color/transparent"/>
            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="120dp"
                android:height="120dp"/>
            <solid android:color="@color/colorPrimary"></solid>
            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>

    <item android:drawable ="@drawable/ic_baseline_camera_24"/>
</layer-list>