<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/small_margin"
    android:layout_margin="2dp"
    android:id="@+id/schedule_card"
    app:cardElevation="@dimen/smaller_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/course_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/coiny"
            android:gravity="center_horizontal|center_vertical"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title" />


        <TextView
            android:id="@+id/course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/smallest_padding"
            android:layout_marginTop="@dimen/smallest_padding"
            android:layout_marginEnd="@dimen/smallest_padding"
            android:layout_marginBottom="@dimen/smallest_padding"
            android:fontFamily="sans-serif"
            android:text="@string/in_every_3_days"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#AEB6BD" />

        <TextView
            android:id="@+id/course_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/archivo_black"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        <TextView
            android:id="@+id/schedule_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal|bottom|fill_vertical"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/time_date_back"
            android:fontFamily="@font/amita_bold"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="#024B1C" />

        <TextView
            android:id="@+id/schedule_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/time_date_back"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="#024B1C" />

        <TextView
            android:id="@+id/schedule_interval"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal|bottom|fill_vertical"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/time_date_back"
            android:fontFamily="@font/amita_bold"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="#024B1C" />

        <TextView
            android:id="@+id/schedule_status"
            android:layout_width="match_parent"
            android:padding="4dp"
            android:gravity="center"
            android:layout_margin="4dp"
            android:textColor="#024B1C"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal|bottom|fill_vertical" />

    </LinearLayout>
</androidx.cardview.widget.CardView>