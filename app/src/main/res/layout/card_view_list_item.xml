    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/card_swipeLayout"
    android:layout_height="wrap_content">

    <LinearLayout
        android:tag="Bottom1"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/edit_set"
            android:src="@drawable/ic_edit"
            android:layout_width="70dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="#A6EFFA"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/star"
            android:src="@drawable/ic_bubble_star"
            android:layout_width="70dp"
            android:background="#95F8BE"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/trash"
            android:src="@drawable/ic_trash_bin"
            android:layout_width="70dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/red"

            android:layout_height="match_parent" />
    </LinearLayout>



    <LinearLayout
        android:tag="Bottom2"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/archive"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/ic_bubble_archive"
            android:layout_width="70dp"
            android:background="#A6EFFA"
            android:layout_height="match_parent" />
    </LinearLayout>

    <include
        android:id="@+id/cardBackView"
        layout="@layout/flashcard_back_view"/>

    <include
        android:id="@+id/cardfrontView"
        layout="@layout/flashcard_front_view"/>




